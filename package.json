{
  "name": "opportune-jobs",
  "version": "1.0.0",
  "description": "AI-powered job application platform with browser extension",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean",
    "install:all": "pnpm install",
    "db:up": "cd packages/database && docker compose --env-file ../../.env.local up -d",
    "db:down": "cd packages/database && docker compose down",
    "db:reset": "cd packages/database && docker compose down -v && docker compose --env-file ../../.env.local up -d"
  },
  "keywords": [
    "job-search",
    "ai",
    "browser-extension",
    "nextjs",
    "monorepo"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0"
  }
}